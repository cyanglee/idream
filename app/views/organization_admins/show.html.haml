- title "Organization Admins"

- if !@organization_admins.empty?
  %table.zebra-striped
    %thead
      %tr
        %th=t("ui.school.name")
        %th=t("ui.school.status")
        %th=t("ui.school.action")

    %tbody
    - for org_admin in @organization_admins
      %tr
        %td= org_admin.organization.name
        %td= translate_status(org_admin.status)

        %td= link_to t("ui.school.unassociate"), org_admin, :confirm => 'Are you sure?', :method => :delete

%p= button_to t("ui.school.associate"), new_user_organization_admins_path(current_user), :class => "primary btn", :method => :get