- title "Jobs"

%table.zebra-striped.job-details
  %tr
    %th=t("simple_form.labels.job.title")
    %td=@job.title
  %tr
    %th=t("simple_form.labels.job.school_name")
    %td= link_to @job.organization.name, @job.organization
  %tr
    %th=t("simple_form.labels.job.period")
    %td=@job.period
  %tr
    %th=t("simple_form.labels.job.begin_date")
    %td=@job.begin_date
  %tr
    %th=t("simple_form.labels.job.end_date")
    %td=@job.end_date
  %tr
    %th=t("simple_form.labels.job.requirement")
    %td=@job.requirement
  %tr
    %th=t("simple_form.labels.job.desc")
    %td=@job.desc
  %tr
    %th=t("simple_form.labels.job.contact")
    %td=@job.contact
  %tr
    %th=t("simple_form.labels.job.contact_email")
    %td=@job.contact_email
  %tr
    %th=t("simple_form.labels.job.contact_phone")
    %td=@job.contact_phone
  - if is_volunteer?
    %tr
      %td
        = simple_form_for @job, :url => user_volunteer_jobs_path(@job), :method => :post do |f|
          = f.input :id, :as => :hidden, :input_html => { :name => 'job[job_id]' }
          = f.submit t("simple_form.labels.job.apply")
      %td
  - if is_school_admin?
    %tr
      %td= link_to t("simple_form.labels.job.edit"), edit_job_path(@job), :class => 'primary btn'

      %td
